<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config></context:annotation-config>

    <bean id="fileLogWriter"
          class="jobayed.practicespringcorethree.logger.FileLogWriter"/>

    <bean id="consoleLogWriter1"
          class="jobayed.practicespringcorethree.logger.ConsoleLogWriter"/>

    <bean id="logger"
          class="jobayed.practicespringcorethree.logger.Logger"/>

</beans>